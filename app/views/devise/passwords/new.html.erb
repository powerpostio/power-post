<%= render partial: 'shared/header' %>
<main>
  <section class="effect-section">
    <div class="container">
      <div class="row align-items-center justify-content-center min-vh-100">
        <div class="col-md-6 col-lg-5 col-xl-4 py-5">
          <div class="card remove-border">
            <div class="card-body">
              <div class="pb-4 text-center">
                <h3 class="mb-2 fs-41"><%= translate 'login.reset_password' %></h3>
              </div>
              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <div class="form-group mb-3">
                  <%= f.label :email, class: 'form-label fs-18' %>
                  <%= f.email_field :email, class: "form-control", id: "prec", required: true, placeholder: "#{translate 'login.your_name_and_email'}" %>
                </div>
                <div class="py-2">
                  <button class="btn btn-primary w-100 fs-18"><%= translate 'login.reset_password' %></button>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<%= render partial: 'shared/footer' %>
