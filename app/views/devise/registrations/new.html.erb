<%= render partial: 'shared/header' %>
<main>
  <section class="page-heading parallax">
    <div class="container">
      <div class="row align-items-center justify-content-center min-vh-100">
        <div class="col-md-6 col-lg-5 col-xl-4 py-5">
          <div class="card remove-border">
            <div class="card-body">
                <div class="pb-4 text-center bold-7-days">
                    <h3 class="mb-2 fs-40"><%= translate 'login.create_account' %></h3>
                    <p class='fs-20 w-400'><%= translate 'login.create_account_description' %> <br/><%= translate 'login.create_account_description1' %> <span class='fs-20'><%= translate 'login.create_account_description2' %></span>.</p>
                </div>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <div class="form-group mb-3">
                      <%= f.label :username, class: 'form-label fs-18' %>
                      <%= f.text_field :username, class: "form-control", id: "prec", required: true, placeholder: 'seunome' %>
                    </div>
                    <div class="form-group mb-3">
                      <%= f.label :email, class: 'form-label fs-18' %>
                      <%= f.email_field :email, class: "form-control", id: "prec", required: true, placeholder: 'seunome@gmail.com' %>
                    </div>
                    <div class="form-group mb-3">
                      <%= f.label :password, class: 'form-label fs-18' %>
                      <%= f.password_field :password, class: "form-control", id: "prec", required: true, placeholder: 'seunome@gmail.com' %>
                    </div>
                    <div class="form-group mb-3">
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="checkCreate" onclick="bntCreate()">
                        <label class="form-check-label fs-18" for="flexCheckDefault">
                          <%= translate 'login.terms_and_conditions' %> <%= link_to "#{translate 'login.terms_and_conditions1'}", root_path %>
                        </label>
                      </div>
                    </div>
                    <div class="py-2">
                      <%= button_to "#{translate 'login.create_account'}", { action: "new" }, class: "btn btn-default w-100 ps-18", id: "btnCreateAccount", disabled: true %>
                    </div>
                    <div class="py-2 text-center">
                      <small class='fs-20'><%= "#{translate 'login.or_log_with'}" %></small>

                    </div>
                    <div class="row">
                      <div class="col-sm-6 my-2">
                        <a class="btn btn-light w-100" href="#">
                          <span class="btn-inner-icon">
                            <i class="fab fa-github"></i>
                          </span>
                          <span class="btn-inner-text">
                            Github
                          </span>
                        </a>
                      </div>
                      <div class="col-sm-6 my-2">
                        <a class="btn btn-light w-100" href="#">
                          <span class="btn-inner-icon">
                            <i class="fab fa-google"></i>
                          </span>
                          <span class="btn-inner-text">
                            Google
                          </span>
                        </a>
                      </div>
                  </div>
                  <div class="mt-3 text-center"><small class='fs-20'>Já tem conta?</small> <%= link_to "Entrar", new_session_path(resource_name), class: "small font-weight-bold fs-20" %></div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<%= render partial: 'shared/footer' %>
